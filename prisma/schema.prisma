generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Memory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  title       String?
  content     String
  tags        String[]
  mood        Mood     @default(neutral)
  date        DateTime @default(now())
  location    String?
  people      String?
  imageUrl    String?
  images      String[]
  sentiment   String   @default("neutral")
  embedding   String?
  pineconeId  String?
  isPrivate   Boolean  @default(false)
  isFavorite  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([userId, mood])
  @@index([userId, isFavorite])
  @@map("memories")
}

enum Mood {
  positive
  neutral
  negative
}

model UserProfile {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @unique
  email           String   @unique
  bio             String?
  location        String?
  website         String?
  phone           String?
  timezone        String?
  profileImage    String?
  backgroundImage String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("userProfiles")
}
